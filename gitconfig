[user]
	name = Pawel Bogut
	email = pbogut@smeagol.pl
[core]
	autocrlf = input
[push]
	default = simple
[github]
	user = pbogut
# Gary Bernhard .gitconfig
# https://github.com/garybernhardt/dotfiles/blob/master/.gitconfig
[diff]
[color]
    ui = auto
[alias]
    #my aliases
    ai = add -i
    ap = add -p
    an = add -N
    rmc = rm --cached
    cob = checkout -b
    cl = "!. ~/.githelpers && git_clone_to_projects"
    au = "update-index --assume-unchanged" #  assume unchanged
    nau = "update-index --no-assume-unchanged" #  no assume unchanged
    sau = "!git ls-files -v | grep '^[a-z]' | cut -f2 -d' '" # show assumed unchanged
    pushup = "!. ~/.githelpers && git_push_upstream"
    diffls = diff-tree --no-commit-id --name-only -r
    ls = "!. ~/.githelpers && git_ls"

    #Create branch
    cb = checkout -b
    #Gary's aliases
    st = status
    ci = commit --verbose
    co = checkout
    di = diff
    dc = diff --cached
    amend = commit --amend
    aa = add --all
    ff = merge --ff-only --no-commit
    pullff = pull --ff-only
    noff = merge --no-ff --no-commit
    noffci = merge --no-ff
    mesq =  merge --squash
    merge = merge --no-commit
    nofc = !git merge --no-ff --no-commit $1 && git commit --verbose && :
    fa = fetch --all
    pom = push origin master
    b = branch
    ds = diff --stat=160,120
    dh1 = diff HEAD~1

    # funny
    whatthecommit = "!git commit --verbose -m \"`curl -qs http://whatthecommit.com/index.txt`\""
    wtc = "!echo \"`curl -qs http://whatthecommit.com/index.txt`\""

    # Divergence (commits we added and commits remote added)
    div = divergence.sh

    # Goodness (summary of diff lines added/removed/total)
    gn = goodness
    gnc = goodness --cached

    wtf = what-the-hell-just-happened

    # Fancy logging.
    #   h = head
    #   hp = head with patch
    #   r = recent commits, only current branch
    #   ra = recent commits, all reachable refs
    #   l = all commits, only current branch
    #   la = all commits, all reachable refs
    head = !git r -1
    h = !git head
    hp = "!. ~/.githelpers && show_git_head"
    r = !GIT_NO_PAGER=1 git l -30
    ra = !git r --all
    l = "!. ~/.githelpers && pretty_git_log"
    la = !git l --all
[merge]
    tool = nvimdiff_nomod
[mergetool "nvimdiff"]
    cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[mergetool "nvimdiff2"]
    cmd = nvim -d $LOCAL $MERGED $REMOTE
[mergetool "nvimdiff02"]
    cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[mergetool "nvimdiff_nomod"]
    cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c 'set nomodifiable' -c 'wincmd l' -c 'set nomodifiable' -c 'wincmd l' -c 'set nomodifiable' -c 'wincmd l' -c 'wincmd J'
