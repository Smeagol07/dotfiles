# focused window (image magick required)
bindsym $mod+Print $sh "import -window $(xprop -root | awk '/_NET_ACTIVE_WINDOW\(WINDOW\)/{print $NF}') ~/Pictures/Screenshot_from_$(date +%Y-%m-%d_%H-%M-%S).png"
# area (maim and slop required)
