{
  "packages": [
    {
      "repo": "xdebug/vscode-php-debug",
      "run": [
        "npm install",
        "npm run build"
      ]
    },
    {
      "repo": "elixir-lsp/elixir-ls",
      "run": [
        "mix deps.get",
        "mix compile",
        "mix elixir_ls.release -o ./out"
      ]
    },
    {
      "repo": "pbogut/emmet-ls",
      "run": [
        "npm install",
        "npm run build"
      ]
    },
    {
      "repo": "sumneko/lua-language-server",
      "tag": "@latest",
      "run": [
        "git submodule update --init --recursive",
        "cd 3rd/luamake && ./compile/install.sh",
        "./3rd/luamake/luamake rebuild"
      ]
    },
    {
      "repo": "vadimcn/vscode-lldb",
      "tag": "@latest",
      "run": [
        "mkdir -p build && cd build && cmake .. -DLLDB_PACKAGE=/ && make"
      ]
    },
    {
      "repo": "rust-analyzer/rust-analyzer",
      "tag": "release",
      "run": [
        "cargo build --release",
        "ln -sf $PWD/target/release/rust-analyzer ~/.bin/rust-analyzer"
      ]
    },
    {
      "repo": "cirala/lfimg",
      "run": [
        "ln -sf $PWD/preview $HOME/.config/lf/preview",
        "ln -sf $PWD/cleaner $HOME/.config/lf/cleaner",
        "ln -sf $PWD/lfrun $HOME/.bin/lfrun"
      ]
    }
  ]
}
